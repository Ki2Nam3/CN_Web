                function ShowDetailInfoRoom(param) {
                    var code = $(param).attr("id");
                    var detailInfoRoom = $("#content_" + code);
                    detailInfoRoom.dialog("open");
                }

                function ShowCondition() {
                    $("#condition").dialog("open");
                }

                function SelectRoom() {
                    var cout = 0;
                    $(".select-room").each(function () {
                        cout += parseInt($(this).val());
                    });
                    console.log(cout);
                    if (cout > 0) {
                        return true;
                    } else {
                        return false;
                    }
                };

                function LoadingSendEmail() {
                    $("#wraploadding").show();
                    $("#wraploadding").css("width", $(window).width());
                    $("#wraploadding").css("height", $(window).height());
                    $("#imgloadding").css("top", ($(window).height() / 2) - 80);
                }

                $(document).ready(function () {
                    $("#CheckIn").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        minDate: new Date()
                    });
                    $("#CheckOut").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        minDate: new Date(),
                    });
                    $(".detail-info-room").dialog(
                        {
                            autoOpen: false,
                            modal: true,
                            width: 600,
                            title: 'Thông tin phòng'
                        });
                    $("#condition").dialog(
                        {
                            autoOpen: false,
                            modal: true,
                            width: 600,
                            title: 'Điều kiện & điều khoản'
                        });
                });


                //validate
                jQuery.validator.setDefaults({
                    debug: true,
                    success: "valid"
                });
                $("#book-tour").validate({
                    rules: {
                        'Gender': {
                            required: true,
                        },
                        'FullName': {
                            required: true,
                        },
                        'Email': {
                            required: true,
                            email: true
                        },
                        'Country': {
                            required: true,
                        },
                        'agree': {
                            required: true,
                        },
                    },
                    messages: {
                        'Gender': "Please select gender",
                        'FullName': "Please enter full name",
                        'Email': "Please enter email adress",
                        'Country': "Please select country",
                        'agree': "Please agree team conditions",
                    },
                    submitHandler: function (form) {
                        if (SelectRoom()) {
                            form.submit();
                            LoadingSendEmail();
                        } else {
                            $(".select-room").css("border", "1px solid red");
                            alert("Please select a room");
                        }
                    }
                });
